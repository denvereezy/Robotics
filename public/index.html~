<script>
  var socket = io();
    $(document).ready(function() {
      socket.on('motion',function(data){
      	console.log(data)
      	$("#motionData").html("<h2>"+data.distance+"</h2>");
      	if(data.motion == 0){
      		motionEnded();
      	}
      })
     
    socket.on('color-red', function(){
	document.getElementById('red').style.backgroundColor = 'red';
})
      
    });
</script>
 
